<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppProject"
             x:Class="AppProject.MainPage">
    <ScrollView>
        <StackLayout>

            <Label Text="Balance the Budget" HorizontalOptions="CenterAndExpand" FontSize="Large">
            </Label>

            <Label Text="GDP: $20.66 Trillion Debt: $21.6 trillion" HorizontalOptions="CenterAndExpand" FontSize="Large">
            </Label>

            <Label Text="Debt to GDP Ratio: 105%" HorizontalOptions="CenterAndExpand" FontSize="Large">
            </Label>

            <Label Text="Employed: 156,562,000 Unemployment Rate: 3.7%" HorizontalOptions="CenterAndExpand" FontSize="Large">
            </Label>

            <Grid
            ColumnSpacing="10"
            RowSpacing="10"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="Start"
                Margin="10, 10, 10, 10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="Revenue in Billions USD"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                BackgroundColor="Green"
                FontSize="Medium">
                </Label>

                <Label
                Grid.Row="0"
                Grid.Column="1"
                Text="Expenditure in Billions USD"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                BackgroundColor="Red"
                FontSize="Medium">
                </Label>

                <!-- Revenue -->

                <Slider x:Name="FirstBracket" ValueChanged="TotalSliderRevenue_ValueChanged"
                Grid.Row="1"
                Grid.Column="0"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="2"
                Grid.Column="0"
                Text="First Bracket">
                </Label>

                <Slider x:Name="SecondBracket" ValueChanged="TotalSliderRevenue_ValueChanged"
                Grid.Row="3"
                Grid.Column="0"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="4"
                Grid.Column="0"
                Text="Second Bracket">
                </Label>

                <Slider x:Name="ThirdBracket" ValueChanged="TotalSliderRevenue_ValueChanged"
                Grid.Row="5"
                Grid.Column="0"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="6"
                Grid.Column="0"
                Text="Third Bracket">
                </Label>
                              
                <Slider x:Name="FourthBracket" ValueChanged="TotalSliderRevenue_ValueChanged"
                Grid.Row="7"
                Grid.Column="0"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="8"
                Grid.Column="0"
                Text="Fourth Bracket">
                </Label>

                <Slider x:Name="FifthBracket" ValueChanged="TotalSliderRevenue_ValueChanged"
                Grid.Row="9"
                Grid.Column="0"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="10"
                Grid.Column="0"
                Text="Fifth Bracket">
                </Label>

                <Slider x:Name="SixthBracket" ValueChanged="TotalSliderRevenue_ValueChanged"
                Grid.Row="11"
                Grid.Column="0"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="12"
                Grid.Column="0"
                Text="Sixth Bracket">
                </Label>

                <Slider x:Name="CorporateTaxRate"
                Grid.Row="13"
                Grid.Column="0"
                Minimum="0" Maximum="100" Value="21" ValueChanged="TotalSliderRevenue_ValueChanged">
                </Slider>
                <Label
                Grid.Row="14"
                Grid.Column="0"
                Text="Corporate Tax Rate">
                </Label>

                <Label x:Name="TotalRevenue"
                    Grid.Row="15" Grid.Column="0"
                    Text="Total Revenue: "  FontSize="Medium">
                </Label>


                <Label x:Name="RevenueTest" Text="Total Revenue:"
                    Grid.Row="16" Grid.Column="0"
                      FontSize="Medium"
                    >
                </Label>

                <Button Grid.Row="16" Grid.Column="0"
               x:Name="submit"
               Clicked="submit_Clicked"
               Text="Calculate"
               HorizontalOptions="End"
               VerticalOptions="CenterAndExpand" >
                </Button>






                <!-- Expenditure -->

                <Slider
                Grid.Row="1"
                Grid.Column="1"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="Medicare">
                </Label>

                <Slider
                Grid.Row="3"
                Grid.Column="1"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="4"
                Grid.Column="1"
                Text="Social Security">
                </Label>

                <Slider
                Grid.Row="5"
                Grid.Column="1"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="6"
                Grid.Column="1"
                Text="Defense">
                </Label>

                <Slider
                Grid.Row="7"
                Grid.Column="1"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="8"
                Grid.Column="1"
                Text="Health">
                </Label>

                <Slider
                Grid.Row="9"
                Grid.Column="1"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="10"
                Grid.Column="1"
                Text="Net Interest">
                </Label>

                <Slider
