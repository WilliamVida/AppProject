                Text="General Government">
                </Label>


                <Slider
                Grid.Row="15"
                Grid.Column="1"
                Minimum="0" Maximum="100">
                </Slider>
                <Label
                Grid.Row="16"
                Grid.Column="1"
                Text="Unreported Data">
                </Label>

                <Slider
                Grid.Row="17"
                Grid.Column="1"
                Minimum="0" Maximum="100"
                >
                </Slider>
                <Label
                Grid.Row="18"
                Grid.Column="1"
                Text="General Government">
                </Label>

                <Slider
                Grid.Row="19"
                Grid.Column="1"
                Minimum="0" Maximum="100"
                >
                </Slider>
                <Label
                Grid.Row="20"
                Grid.Column="1"
                Text="Veterans Benefits and Services">
                </Label>

                <Slider
                Grid.Row="21"
                Grid.Column="1"
                Minimum="0" Maximum="100"
                >
                </Slider>
                <Label
                Grid.Row="22"
                Grid.Column="1"
                Text="International Affairs">
                </Label>

                <Slider
                Grid.Row="23"
                Grid.Column="1"
                Minimum="0" Maximum="100"
                >
                </Slider>
                <Label
                Grid.Row="24"
                Grid.Column="1"
                Text="Education, Training, Employment, and Social Services">
                </Label>

                <Slider
                Grid.Row="25"
                Grid.Column="1"
